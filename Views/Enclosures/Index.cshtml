@model IEnumerable<Dierentuin.Models.Enclosure>

    <h2>Enclosures</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Enclosure</a>

    <table class="table table-striped">
    <thead>
    <tr>
    <th>Name</th>
    <th>Size (mÂ²)</th>
    <th>Climate</th>
    <th>Habitat Type</th>
    <th>Security Level</th>
    <th>Animals</th>
    <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var enclosure in Model)
{
    <tr>
        <td>@enclosure.Name</td>
        <td>@enclosure.Size</td>
        <td>@enclosure.Climate</td>
        <td>@enclosure.HabitatType</td>
        <td>@enclosure.SecurityLevel</td>
        <td>@enclosure.Animals.Count</td>
        <td>
        <a asp-action="Edit" asp-route-id="@enclosure.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Details" asp-route-id="@enclosure.Id" class="btn btn-info">Details</a>
        <a asp-action="Delete" asp-route-id="@enclosure.Id" class="btn btn-danger">Delete</a>
        </td>
        </tr>
}
</tbody>
    </table>
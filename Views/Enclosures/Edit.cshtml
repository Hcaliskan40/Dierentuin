@model Dierentuin.Models.Enclosure

<h2>Edit Enclosure</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" type="number" step="0.1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Climate"></label>
        <input asp-for="Climate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HabitatType"></label>
        <select asp-for="HabitatType" class="form-control">
            @foreach (var habitat in Enum.GetValues(typeof(Dierentuin.Models.HabitatType)).Cast<Dierentuin.Models.HabitatType>())
            {
            <option value="@habitat" @(Model.HabitatType == habitat ? "selected" : "")>
                @habitat
            </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="SecurityLevel"></label>
        <select asp-for="SecurityLevel" class="form-control">
            @foreach (var security in Enum.GetValues(typeof(Dierentuin.Models.SecurityLevel)).Cast<Dierentuin.Models.SecurityLevel>())
            {
            <option value="@security" @(Model.SecurityLevel == security ? "selected" : "")>
                @security
            </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model Dierentuin.Models.Animal

<h2>Delete Animal</h2>
<div class="alert alert-warning">
    <h4>Are you sure you want to delete this animal?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <strong>Animal Details</strong>
    </div>
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Species:</strong> @Model.Species</p>
        @if (Model.Category != null)
        {
            <p><strong>Category:</strong> @Model.Category.Name</p>
        }
        <p><strong>Size:</strong> @Model.Size</p>
        <p><strong>Dietary Class:</strong> @Model.DietaryClass</p>
        <p><strong>Activity Pattern:</strong> @Model.ActivityPattern</p>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>



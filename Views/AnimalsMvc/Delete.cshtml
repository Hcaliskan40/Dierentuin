@model Dierentuin.Models.Animal

<h2>Delete Animal</h2>
<p>Weet je zeker dat je dit dier wilt verwijderen?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Species</dt>
    <dd class="col-sm-10">@Model.Species</dd>

    <dt class="col-sm-2">Size</dt>
    <dd class="col-sm-10">@Model.Size</dd>

    <dt class="col-sm-2">Dietary Class</dt>
    <dd class="col-sm-10">@Model.DietaryClass</dd>

    <dt class="col-sm-2">Activity Pattern</dt>
    <dd class="col-sm-10">@Model.ActivityPattern</dd>
</dl>

<!-- Formulier om het dier daadwerkelijk te verwijderen -->
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
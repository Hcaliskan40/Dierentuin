@model Dierentuin.Models.Animal

<h2>Edit Animal</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Species"></label>
        <input asp-for="Species" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (Dierentuin.Models.Category category in ViewBag.Categories as IEnumerable<Dierentuin.Models.Category>)
            {
            <option value="@category.Id" selected="@(category.Id == Model.CategoryId ? "selected" : "")">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <select asp-for="Size" class="form-control">
            @foreach (Dierentuin.Models.SizeEnum size in Enum.GetValues(typeof(Dierentuin.Models.SizeEnum)))
            {
            <option value="@size" selected="@(size == Model.Size ? "selected" : "")">@size</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DietaryClass"></label>
        <select asp-for="DietaryClass" class="form-control">
            @foreach (Dierentuin.Models.DietaryClassEnum diet in Enum.GetValues(typeof(Dierentuin.Models.DietaryClassEnum)))
            {
            <option value="@diet" selected="@(diet == Model.DietaryClass ? "selected" : "")">@diet</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ActivityPattern"></label>
        <select asp-for="ActivityPattern" class="form-control">
            @foreach (Dierentuin.Models.ActivityPatternEnum activity in Enum.GetValues(typeof(Dierentuin.Models.ActivityPatternEnum)))
            {
            <option value="@activity" selected="@(activity == Model.ActivityPattern ? "selected" : "")">@activity</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

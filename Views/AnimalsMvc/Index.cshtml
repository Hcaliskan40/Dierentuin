@model IEnumerable<Dierentuin.Models.Animal>

<h2>Animals</h2>

<!-- Search and Filter Section -->
<form method="get" class="mb-3">
    <div class="form-inline">
        <label for="searchAnimal" class="mr-2">Search Animals:</label>
        <input type="text" name="searchAnimal" id="searchAnimal" class="form-control mr-2" placeholder="Search by name..." value="@ViewData["searchAnimal"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Add New Animal
</a>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Category</th>
            <th>Size</th>
            <th>Dietary Class</th>
            <th>Activity Pattern</th>
            <th>Sunrise Action</th>
            <th>Sunset Action</th>
            <th>Feeding Time Action</th>
            <th>Constraints</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var animal in Model)
            {
                <tr>
                    <td>@animal.Name</td>
                    <td>@animal.Species</td>
                    <td>@animal.Category?.Name ?? "N/A"</td>
                    <td>@animal.Size</td>
                    <td>@animal.DietaryClass</td>
                    <td>@animal.ActivityPattern</td>
                    <td>@animal.SunriseAction</td>
                    <td>@animal.SunsetAction</td>
                    <td>@animal.FeedingTime</td>
                    <td>
                        <button class="btn btn-info btn-sm" data-toggle="tooltip" title="@animal.CheckConstraints()">
                            <i class="fas fa-check"></i> View
                        </button>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@animal.Id" class="btn btn-warning btn-sm" aria-label="Edit @animal.Name">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@animal.Id" class="btn btn-danger btn-sm" aria-label="Delete @animal.Name">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">No animals found.</td>
            </tr>
        }
    </tbody>
</table>

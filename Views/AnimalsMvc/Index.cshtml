@model IEnumerable<Dierentuin.Models.Animal>

<h2>Animals</h2>
<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search Animals..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Animal</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Species</th>
        <th>Category</th>
        <th>Size</th>
        <th>Dietary Class</th>
        <th>Activity Pattern</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var animal in Model)
    {
        <tr>
            <td>@animal.Name</td>
            <td>@animal.Species</td>
            <td>@animal.Category?.Name</td>
            <td>@animal.Size</td>
            <td>@animal.DietaryClass</td>
            <td>@animal.ActivityPattern</td>
            <td>
                <a asp-action="Edit" asp-route-id="@animal.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@animal.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
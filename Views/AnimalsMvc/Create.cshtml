@model Dierentuin.Models.Animal

    <h2>Create Animal</h2>
    <form asp-action="Create" method="post">
    <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
    <label asp-for="Species"></label>
    <input asp-for="Species" class="form-control" />
    </div>
    <div class="form-group">
    <label asp-for="Size"></label>
    <select asp-for="Size" class="form-control">
    @foreach (var size in Enum.GetValues(typeof(Dierentuin.Models.SizeEnum)))
{
    <option value="@size">@size</option>
}
</select>
    </div>
    <div class="form-group">
    <label asp-for="DietaryClass"></label>
    <select asp-for="DietaryClass" class="form-control">
    @foreach (var diet in Enum.GetValues(typeof(Dierentuin.Models.DietaryClassEnum)))
{
    <option value="@diet">@diet</option>
}
</select>
    </div>
    <div class="form-group">
    <label asp-for="ActivityPattern"></label>
    <select asp-for="ActivityPattern" class="form-control">
    @foreach (var activity in Enum.GetValues(typeof(Dierentuin.Models.ActivityPatternEnum)))
{
    <option value="@activity">@activity</option>
}
</select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    </form>
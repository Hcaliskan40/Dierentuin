@model IEnumerable<Dierentuin.Models.Category>

@{
    ViewData["Title"] = "Categories Index";
    var searchCategory = ViewData["SearchCategory"] as string; // Get the search term from ViewData
}

<h1>Categories</h1>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search Animals..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


<!-- Table of Categories -->
<table class="table mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Assigned Animals</th> <!-- Additional column for assigned animals -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => category.Name)</td>
                <td>
                    <!-- Link to display the animals in the category -->
                    <a asp-action="Details" asp-route-id="@category.Id">View Animals</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to Create New Category -->
<p>
    <a asp-action="Create" class="btn btn-success">Create New Category</a>
</p>



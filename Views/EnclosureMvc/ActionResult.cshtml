@model Dierentuin.Models.Enclosure

<h2>Action Results for @Model.Name</h2>

@if (ViewBag.SunriseStatus != null)
{
<h3>Sunrise Status</h3>
<table class="table">
    <thead>
    <tr>
        <th>Animal Name</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.SunriseStatus)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Status</td>
    </tr>
    }
    </tbody>
</table>
}


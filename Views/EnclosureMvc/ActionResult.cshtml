@if (ViewBag.FeedingSchedule != null)
{
<h3>Feeding Schedule</h3>
<table class="table">
    <thead>
    <tr>
        <th>Animal Name</th>
        <th>Food</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.FeedingSchedule)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Food</td>
    </tr>
    }
    </tbody>
</table>
}

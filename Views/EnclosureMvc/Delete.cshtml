@model Dierentuin.Models.Enclosure

<h2>Delete Enclosure</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this enclosure?</h4>
    <p>This action cannot be undone.</p>
</div>

<div>
    <h5>@Model.Name</h5>
    <p><strong>Climate:</strong> @Model.Climate</p>
    <p><strong>Habitat Type:</strong> @Model.HabitatType</p>
    <p><strong>Security Level:</strong> @Model.SecurityLevel</p>
    <p><strong>Size:</strong> @Model.Size mÂ²</p>
</div>

<form asp-action="Delete">

@model Dierentuin.Models.Enclosure

<h2>Create Enclosure</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Climate"></label>
        <select asp-for="Climate" asp-items="ViewBag.Climates" class="form-control"></select>
        <span asp-validation-for="Climate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HabitatType"></label>
        <select asp-for="HabitatType" asp-items="ViewBag.HabitatTypes" class="form-control"></select>
        <span asp-validation-for="HabitatType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecurityLevel"></label>
        <select asp-for="SecurityLevel" asp-items="ViewBag.SecurityLevels" class="form-control"></select>
        <span asp-validation-for="SecurityLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Enclosure</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Cancel</a>